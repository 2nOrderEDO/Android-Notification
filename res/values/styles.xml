<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Background" parent="AppTheme">
        <item name="android:background">@drawable/wool</item>
    </style>
    <style name="ErrorBackground" parent="AppTheme">
        <item name="android:background">#ffffff</item>
    </style>
    
    <!-- Splash Screen  -->
    <style name="SplashLoading" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#121212</item>
        <item name="android:textStyle">italic</item>                
    </style>
    
    <style name="SplashVersion" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#121212</item>
    </style>
    
    <!-- Error Screen  -->
    <style name="Error" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
    <!-- Dashboard -->
    <style name="Heading" parent="AppTheme">
        <item name="android:background">@drawable/blue</item>
    </style>
    <style name="Username" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>        
		</style>
    <style name="UserTitle" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">italic</item>        
        </style>
    <style name="UserLevel" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style parent="AppTheme" name="Table">
	    <item name="android:layout_margin">@dimen/m_gap</item>
	    <item name="android:background">@drawable/table_background</item>
	    <item name="android:padding">@dimen/m_gap</item>
	</style>
        
    <style parent="AppTheme" name="Row">
        <item name="android:layout_height">@dimen/m_rythm</item>
        <item name="android:layout_margin">@dimen/m_half_gap</item>
    </style> 
    
	<style parent="AppTheme" name="LabelNextReview"> 
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>
	<style parent="AppTheme" name="LabelNextReviewVal"> 
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:gravity">center</item>
	</style>
	
    <style parent="AppTheme" name="LabelKey">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:gravity">left</item>	    	    	
	</style>
	<style parent="AppTheme" name="LabelValue">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:gravity">right</item>	    	
	</style>
	
	<style parent="AppTheme" name="LessonsAvailable">
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:layout_margin">@dimen/m_half_gap</item>
	</style>
	
	<style parent="AppTheme" name="Progressions"> 
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:layout_margin">@dimen/m_half_gap</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">wrap_content</item>				
		<item name="android:layout_weight">1</item>
	</style>
	
	<style parent="AppTheme" name="ProgressRemaining"> 
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:layout_margin">@dimen/m_half_gap</item>
		<item name="android:layout_height">wrap_content</item>				
		<item name="android:layout_width">wrap_content</item>
		<item name="android:gravity">right</item>
    </style>
		
	<style parent="Table" name="AlertsTable">	    
	</style>
	
    <style parent="Table" name="ProgressTable">
	</style>
	
    <style parent="AppTheme" name="kb_key">
        <item name="android:layout_height">@dimen/m_kb_key</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_margin">0dip</item>
    </style>

    <style parent="kb_key" name="kb_meta_key"/>
    
    <style parent="AppTheme" name="keyboard">
        <item name="android:background">@drawable/wool</item>
    </style>
    
    <style parent="AppTheme" name="LevelTable">
        <item name="android:layout_width">@dimen/m_rythm</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:divider">#b5b5b5</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:paddingBottom">@dimen/m_half_gap</item>
        <item name="android:listSelector">@xml/items_level_selector</item>
    </style>     
    
    <style parent="AppTheme" name="AlertButton">
        <item name="android:layout_width">@dimen/m_dash_alerts</item>
        <item name="android:layout_height">@dimen/m_dash_alerts</item>        
    </style>
    
    <style parent="AppTheme" name="ItemButton">
        <item name="android:layout_width">@dimen/m_rythm</item>
        <item name="android:layout_height">@dimen/m_rythm</item>        
    </style>
    
    <style parent="AppTheme" name="SearchButton">
        <item name="android:layout_height">@dimen/m_search_button_height</item>        
    </style>
    
    <style parent="AppTheme" name="LevelRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/m_rythm</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@xml/items_level_selector</item>
    </style>
    
    <style parent="AppTheme" name="ItemTable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:divider">#cccccc</item>
        <item name="android:dividerHeight">3dip</item>
    </style> 
    
    <style parent="AppTheme" name="ItemRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
        
    <style parent="AppTheme" name="ListLevel">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:gravity">center</item>	
	    <item name="android:textColor">#fff</item>    	    	
	</style>
    	
    <style parent="AppTheme" name="Item">
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style parent="AppTheme" name="ItemLevel">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	    <item name="android:gravity">center</item>	
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#fff</item>    	    	
	</style>    
    
    <style parent="AppTheme" name="ItemGlyph">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_margin">@dimen/m_half_gap</item>    
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#fff</item>
    </style>
    
   	<style parent="ItemGlyph" name="ItemGlyphImage">
       <item name="android:layout_width">@dimen/m_glyph</item>
       <item name="android:layout_height">@dimen/m_glyph</item>
       <item name="android:layout_marginTop">@dimen/m_glyph_image_margin</item>    
       <item name="android:layout_marginBottom">@dimen/m_glyph_image_margin</item>    
       </style>
    
    <style parent="Item" name="RadicalItem">
        <item name="android:background">@drawable/blue</item>
    </style>	
    
    <style parent="Item" name="KanjiItem">
        <item name="android:background">@drawable/magenta</item>
    </style>
    
    <style parent="Item" name="VocabItem">
        <item name="android:background">@drawable/violet</item>
        <item name="android:paddingRight">@dimen/m_half_gap</item>
    </style>
    
    <style parent="AppTheme" name="ItemDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style parent="AppTheme" name="ItemProgressLevel">
        <item name="android:layout_width">@dimen/m_srs_size</item>
        <item name="android:layout_height">@dimen/m_srs_size</item>
    </style>
    
    <style name="ItemStrings" parent="AppTheme">
        <item name="android:maxLines">1</item>
    </style>
        
    <style name="ItemMeaning" parent="ItemStrings">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
   </style>
    	
    <style name="ItemReading" parent="ItemStrings">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemInfo" parent="ItemReading">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
    <style name="ItemImportantReading" parent="ItemReading">
        <item name="android:textStyle">bold</item>                
    </style>
    
    <style name="Popup" parent="AppTheme">
        <item name="android:background">@drawable/menu_background</item>
    </style>
    
    <style name="MenuTitle" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:background">#fff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">@dimen/m_gap</item>                
    </style>
    
    <style name="MenuPane" parent="AppTheme">
		<item name="android:background">#ccc</item>
        <item name="android:padding">@dimen/m_gap</item>                
	</style>
	
    <style name="ChartTitle" parent ="AppTheme">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|center</item>        
    </style>
    <style name="ChartLegend" parent ="AppTheme">
        <item name="android:gravity">top</item>        
    </style>
    <style name="ProgressTitle" parent="AppTheme">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingRight">@dimen/m_gap</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ProgressPlot" parent="Table">
        <item name="android:paddingTop">@dimen/m_half_gap</item>
        <item name="android:paddingBottom">@dimen/m_half_gap</item>
        </style>
    
    <style name="LegendItem" parent="AppTheme">
        <item name="android:layout_width">@dimen/m_li_width</item>
        <item name="android:layout_height">@dimen/m_li_height</item>
        <item name="android:layout_margin">@dimen/m_gap</item>
    </style>

    <style name="LegendDescription" parent="LegendItem">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Estimates" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="LegendValue" parent="LegendDescription">		
    </style>

    <style name="Spinner" parent="AppTheme">
        <item name="android:minWidth">@dimen/m_spinner</item>
        <item name="android:minHeight">@dimen/m_spinner</item>
        <item name="android:maxWidth">@dimen/m_spinner</item>
        <item name="android:maxHeight">@dimen/m_spinner</item>
    </style>
    
    <style name="Separator" parent="AppTheme">
        <item name="android:layout_marginLeft">@dimen/m_separator_margin</item>
        <item name="android:layout_marginRight">@dimen/m_separator_margin</item>
        <item name="android:layout_marginTop">@dimen/m_half_gap</item>
        <item name="android:layout_marginBottom">@dimen/m_half_gap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/m_separator_height</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Meter" parent="Estimates">
       <item name="android:textStyle">italic</item>                                
    </style>
</resources>