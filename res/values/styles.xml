<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Background" parent="AppTheme">
        <item name="android:background">@drawable/wool</item>
    </style>
    <style name="ErrorBackground" parent="AppTheme">
        <item name="android:background">#ffffff</item>
    </style>
    
    <!-- Splash Screen  -->
    <style name="SplashLoading" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#121212</item>
        <item name="android:textStyle">italic</item>                
    </style>
    
    <!-- Error Screen  -->
    <style name="Error" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
    <!-- Dashboard -->
    <style name="Heading" parent="AppTheme">
        <item name="android:background">@drawable/blue</item>
    </style>
    <style name="Username" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>        
		</style>
    <style name="UserTitle" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">italic</item>        
        </style>
    <style name="UserLevel" parent="AppTheme">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style parent="AppTheme" name="Table">
	    <item name="android:layout_margin">@dimen/m_gap</item>
	    <item name="android:background">@drawable/table_background</item>
	    <item name="android:padding">@dimen/m_gap</item>
	</style>
        
    <style parent="AppTheme" name="Row">
        <item name="android:layout_height">@dimen/m_rythm</item>
        <item name="android:layout_margin">@dimen/m_half_gap</item>
    </style> 
    
	<style parent="AppTheme" name="LabelNextReview"> 
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>
	<style parent="AppTheme" name="LabelNextReviewVal"> 
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:gravity">center</item>
	</style>
	
    <style parent="AppTheme" name="LabelKey">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:gravity">left</item>	    	    	
	</style>
	<style parent="AppTheme" name="LabelValue">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:gravity">right</item>	    	
	</style>
	
	<style parent="AppTheme" name="LessonsAvailable">
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/m_half_gap</item>
	</style>
	
	<style parent="AppTheme" name="Progressions"> 
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:layout_margin">@dimen/m_half_gap</item>
	</style>
	
    <style parent="Table" name="ProgressTable">
	    <item name="android:layout_height">@dimen/m_progress_table</item>
	</style>
	
    <style parent="AppTheme" name="kb_key">
        <item name="android:layout_height">@dimen/m_kb_key</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_margin">0dip</item>
    </style>

    <style parent="kb_key" name="kb_meta_key"/>
    
    <style parent="AppTheme" name="keyboard">
        <item name="android:background">@drawable/wool</item>
    </style>
    
    <style parent="AppTheme" name="ListLevel">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:gravity">center</item>	
	    <item name="android:textColor">#000</item>    	    	
	</style>
    	
</resources>