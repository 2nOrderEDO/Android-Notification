    	        style="@style/kb_key"
    	        android:layout_weight="1" />
    	    <Button
    	        android:id="@+id/kb_9"
    	        style="@style/kb_key"
    	        android:layout_weight="1" />
    	    	    	    	    	    	    	    	    	    
    	</LinearLayout>
    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="horizontal"
    	    android:layout_alignParentBottom="true">
     
	   	    <View
    	        style="@style/kb_key"
