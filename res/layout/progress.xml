<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Background"
    android:id="@+id/scrollView1"    
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        style="@style/AppBaseTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/tab_stats"
            style="@style/StatsTable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" >

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/apprentice"
                    style="@style/LabelKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tag_apprentice" />

                <TextView
                    android:id="@+id/apprentice_val"
                    style="@style/LabelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textIsSelectable="true" />

                <ProgressBar
                    android:id="@+id/pb_apprentice"
                    android:maxHeight="24dp"
                    android:maxWidth="24dp"
                    android:minHeight="24dip"
                    android:minWidth="24dip"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/guru"
                    style="@style/LabelKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tag_guru" />

                <TextView
                    android:id="@+id/guru_val"
                    style="@style/LabelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textIsSelectable="true" />

                <ProgressBar
                    android:id="@+id/pb_guru"
                    android:maxHeight="24dp"
                    android:maxWidth="24dp"
                    android:minHeight="24dip"
                    android:minWidth="24dip"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/master"
                    style="@style/LabelKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tag_master" />

                <TextView
                    android:id="@+id/master_val"
                    style="@style/LabelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textIsSelectable="true" />

                <ProgressBar
                    android:id="@+id/pb_master"
                    android:maxHeight="24dp"
                    android:maxWidth="24dp"
                    android:minHeight="24dip"
                    android:minWidth="24dip"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/enlightened"
                    style="@style/LabelKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tag_enlightened" />

                <TextView
                    android:id="@+id/enlightened_val"
                    style="@style/LabelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textIsSelectable="true" />

                <ProgressBar
                    android:id="@+id/pb_enlightened"
                    android:maxHeight="24dp"
                    android:maxWidth="24dp"
                    android:minHeight="24dip"
                    android:minWidth="24dip"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/burned"
                    style="@style/LabelKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tag_burned" />

                <TextView
                    android:id="@+id/burned_val"
                    style="@style/LabelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textIsSelectable="true" />

                <ProgressBar
                    android:id="@+id/pb_burned"
                    android:maxHeight="24dp"
                    android:maxWidth="24dp"
                    android:minHeight="24dip"
                    android:minWidth="24dip"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            style="@style/AppBaseTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_alert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textIsSelectable="true" />

            <ProgressBar
                android:id="@+id/pb_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="24dp"
                android:maxWidth="24dp"
                android:minHeight="24dip"
                android:minWidth="24dip"
                android:visibility="invisible" />
        </LinearLayout>    

	</LinearLayout>
</ScrollView>