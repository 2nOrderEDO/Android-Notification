<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/KanjiItem"
    android:layout_width="match_parent"
    android:orientation="horizontal" >

    <com.wanikani.androidnotifier.HiPriorityScrollView
        android:id="@+id/hsv_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/m_half_gap" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/img_srs"
                    style="@style/ItemProgressLevel"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/it_level"
                    style="@style/ItemLevel"
                    android:layout_alignParentBottom="true"
                    android:text="" />
            </RelativeLayout>

            <TextView
                android:id="@+id/it_glyph"
                style="@style/ItemGlyph"
                android:textSize="@dimen/m_glyph" />

            <LinearLayout
                android:id="@+id/it_description"
                style="@style/ItemDescription"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/it_onyomi"
                    style="@style/ItemImportantReading" />

                <LinearLayout
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/it_kunyomi"
                    style="@style/ItemReading" />
                <TextView
                    android:id="@+id/it_nanori"
                    style="@style/ItemReading" />
                				</LinearLayout>
                <TextView
                    android:id="@+id/it_info"
                    style="@style/ItemInfo" />

                <TextView
                    android:id="@+id/it_meaning"
                    style="@style/ItemMeaning" />
            </LinearLayout>
        </LinearLayout>
    </com.wanikani.androidnotifier.HiPriorityScrollView>

</LinearLayout>