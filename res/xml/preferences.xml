<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <EditTextPreference android:key="pref_userkey" 
        	android:title="@string/pref_userkey" android:summary="@string/pref_userkey_descr"/>
    <PreferenceCategory
        	android:title="@string/tpref_notifications">    
    	<CheckBoxPreference 
        		android:key="pref_enabled" 
        		android:title="@string/pref_enabled" 
        		android:defaultValue="true" android:summary="@string/pref_enabled_descr"/>
    	<EditTextPreference  
        		android:title="@string/pref_not_threshold" 
        		android:key="pref_not_threshold"
        		android:inputType="number"
        		android:defaultValue="1"/>
    	<CheckBoxPreference    	    	
    	    	android:key="pref_lessons_enabled"
    	    	android:title="@string/pref_lessons_enabled"
    	    	android:defaultValue="false" android:summary="@string/pref_lessons_enabled_descr"/>    	    
	</PreferenceCategory>
	<PreferenceCategory
	    	android:title="@string/tpref_dashboard">
    	
	    <ListPreference
	        android:key="pref_layout"
	        android:title="@string/pref_layout"
	        android:summary="@string/pref_layout_desc"
	        android:defaultValue="0"
	        android:entries="@array/layouts"
	        android:entryValues="@array/layoutValues"/>
	        
    	<EditTextPreference  
        	android:title="@string/pref_refresh_timeout" 
        	android:key="pref_refresh_timeout"
        	android:inputType="number"
        	android:defaultValue="5"/>
    	<CheckBoxPreference
        	android:key="pref_42plus"
        	android:title="@string/pref_42plus"
        	android:summary="@string/pref_42plus_descr"
        	android:defaultValue="false" />    	
   	</PreferenceCategory>   
	<PreferenceCategory
	    	android:title="@string/tpref_review_enhancements">
    	<CheckBoxPreference
	        android:key="pref_review_improvements"
	        android:title="@string/pref_review_improvements"
	        android:summary="@string/pref_review_improvements_desc"
	        android:defaultValue="true"/>
	    <CheckBoxPreference
        	android:key="pref_ignore_button"
        	android:title="@string/pref_ignore_button"
        	android:summary="@string/pref_ignore_button_descr"
        	android:defaultValue="true" />
	    <CheckBoxPreference
        	android:key="pref_single_button"
        	android:title="@string/pref_single_button"
        	android:summary="@string/pref_single_button_descr"
        	android:defaultValue="true" />
	    <CheckBoxPreference
        	android:key="pref_wanikani_improve"
        	android:title="@string/pref_wanikani_improve"
        	android:summary="@string/pref_wanikani_improve_descr"
        	android:defaultValue="false" />    
    	<CheckBoxPreference
        	android:key="pref_review_order"
        	android:title="@string/pref_review_order"
        	android:summary="@string/pref_review_order_descr"
        	android:defaultValue="false" />    
    	<CheckBoxPreference
        	android:key="pref_lesson_order"
        	android:title="@string/pref_lesson_order"
        	android:summary="@string/pref_lesson_order_descr"
        	android:defaultValue="false" />
    	<CheckBoxPreference
    	    android:key="pref_external_frame_placer"
    	    android:title="@string/pref_external_frame_placer"
    	    android:summary="@string/pref_external_frame_placer_descr"
    	    android:defaultValue="false"/>
    	<ListPreference
	        android:key="pref_external_frame_placer_dict"
	        android:title="@string/pref_external_frame_placer_dict"
	        android:summary="@string/pref_external_frame_placer_dict"
	        android:defaultValue="JISHO"
	        android:entries="@array/dictionaryURL"
	        android:entryValues="@array/dictionaryURLValues"/>    	
    	<CheckBoxPreference
        	android:key="pref_error_popup"
        	android:title="@string/pref_error_popup"
        	android:summary="@string/pref_error_popup_descr"
        	android:defaultValue="false" />    
	    <CheckBoxPreference
        	android:key="pref_disable_suggestions"
        	android:title="@string/pref_disable_suggestions"
        	android:summary="@string/pref_disable_suggestions_desc"
        	android:defaultValue="true" />       	
    	<CheckBoxPreference
        	android:key="pref_show_mute"
        	android:title="@string/pref_show_mute"
        	android:summary="@string/pref_show_mute_desc"
        	android:defaultValue="true" />    	
	    <CheckBoxPreference
        	android:key="pref_srs_indication"
        	android:title="@string/pref_srs_indication"
        	android:summary="@string/pref_srs_indication_descr"
        	android:defaultValue="true" />
   	</PreferenceCategory>	
	<PreferenceCategory
	    	android:title="@string/tpref_reviews">
	<CheckBoxPreference
        	android:key="pref_use_integrated_browser"
        	android:title="@string/pref_use_integrated_browser"
        	android:defaultValue="true" />
    <CheckBoxPreference
        	android:key="pref_lock_screen"
        	android:title="@string/pref_lock_screen"
        	android:summary="@string/pref_lock_screen_descr"
        	android:defaultValue="true" />
    <CheckBoxPreference
        	android:key="pref_fullscreen"
        	android:title="@string/pref_fullscreen"
        	android:summary="@string/pref_fullscreen_descr"
        	android:defaultValue="false" />
    <CheckBoxPreference
        	android:key="pref_hw_keyboard"
        	android:title="@string/pref_hw_keyboard"
        	android:summary="@string/pref_hw_keyboard_descr"
        	android:defaultValue="false" />
    <CheckBoxPreference
        	android:key="pref_timer_reaper"
        	android:title="@string/pref_timer_reaper"
        	android:summary="@string/pref_timer_reaper_descr"
        	android:defaultValue="true"/>
    <CheckBoxPreference
        	android:key="pref_hw_accel"
        	android:title="@string/pref_hw_accel"
        	android:summary="@string/pref_hw_accel_descr"
        	android:defaultValue="true"/>
    <CheckBoxPreference
        	android:key="pref_leak_kludge"
        	android:title="@string/pref_leak_kludge"
        	android:summary="@string/pref_leak_kludge_descr"
        	android:defaultValue="true"/>
    <EditTextPreference android:key="pref_review_url" 
        	android:title="@string/pref_url" android:summary="@string/pref_url_desc"
        	android:defaultValue="http://www.wanikani.com/review/session" />
    <EditTextPreference android:key="pref_lesson_url2" 
        	android:title="@string/pref_lesson_url" android:summary="@string/pref_lesson_url_desc"
        	android:defaultValue="http://www.wanikani.com/lesson/session" />
    </PreferenceCategory>
	<PreferenceCategory
	    	android:title="@string/tpref_export">
	    <ListPreference
	        android:key="pref_export_dest"
	        android:title="@string/pref_export_dest"
	        android:summary="@string/pref_export_dest_desc"
	        android:defaultValue="JISHO"
	        android:entries="@array/exports"
	        android:entryValues="@array/exportValues"/>
	        
    	<EditTextPreference  
        	android:title="@string/pref_export_file" 
        	android:key="pref_export_file"
        	android:summary="@string/pref_export_file_desc"
        	android:defaultValue=""/>
	</PreferenceCategory>    
</PreferenceScreen>
